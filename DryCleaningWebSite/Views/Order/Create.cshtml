@model OrderComplexDataViewModel
@{ 
    ViewData["Title"] = "Создание наряд-заказа";
}

<div class="row">
    <div class="col-12 blur-background p-4">
        <form method="post" asp-controller="Order" asp-action="Create" asp-antiforgery="true" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
               *<label asp-for="@Model.OrderViewModelData.DateOfReceipt" class="control-label"></label>
                <input asp-for="@Model.OrderViewModelData.DateOfReceipt" type="date" autocomplete="off" class="form-control" />
                <span asp-validation-for="@Model.OrderViewModelData.DateOfReceipt" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="@Model.OrderViewModelData.DateOfPlainIssue" class="control-label"></label>
                <input asp-for="@Model.OrderViewModelData.DateOfPlainIssue" type="date" autocomplete="off" class="form-control" />
                <span asp-validation-for="@Model.OrderViewModelData.DateOfPlainIssue" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.ClientId"></label><br />
                <select asp-for="OrderViewModelData.ClientId" asp-items="@Model.ClientsData" autocomplete="off" class="form-control">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.ClientId" class="text-danger"></span>
            </div>

            <div class="form-group">
               *<label asp-for="OrderViewModelData.ThingTypeId"></label><br />
                <select asp-for="OrderViewModelData.ThingTypeId" asp-items="@Model.ThingTypesData" autocomplete="off" class="form-control">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.ManufacturerMarkingId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.ThingSize"></label><br />
                <input asp-for="OrderViewModelData.ThingSize" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.ThingSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.ThingComplect"></label><br />
                <input asp-for="OrderViewModelData.ThingComplect" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.ThingComplect" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.ManufacturerMarkingId"></label><br />
                <select asp-for="OrderViewModelData.ManufacturerMarkingId" asp-items="@Model.ManufacturerMarkingsData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.ManufacturerMarkingId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.PollutionDegreeId"></label><br />
                <select asp-for="OrderViewModelData.PollutionDegreeId" asp-items="@Model.PollutionDegreeData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.PollutionDegreeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.BurnoutDegreeId"></label><br />
                <select asp-for="OrderViewModelData.BurnoutDegreeId" asp-items="@Model.BurnoutDegreeData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.BurnoutDegreeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.GluePartsId"></label><br />
                <select asp-for="OrderViewModelData.GluePartsId" asp-items="@Model.GluePartssData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.GluePartsId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.HasBloodWine">
                    <input asp-for="OrderViewModelData.HasBloodWine" />
                    @Html.DisplayNameFor(m => m.OrderViewModelData.HasBloodWine)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.HasPaintBlackPasta">
                    <input asp-for="OrderViewModelData.HasPaintBlackPasta" />
                    @Html.DisplayNameFor(m => m.OrderViewModelData.HasPaintBlackPasta)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.HasOilFat">
                    <input asp-for="OrderViewModelData.HasOilFat" />
                    @Html.DisplayNameFor(m => m.OrderViewModelData.HasOilFat)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.HasShine">
                    <input asp-for="OrderViewModelData.HasShine" />
                    @Html.DisplayNameFor(m => m.OrderViewModelData.HasShine)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.HasSpotUnknownOrigin">
                    <input asp-for="OrderViewModelData.HasSpotUnknownOrigin" />
