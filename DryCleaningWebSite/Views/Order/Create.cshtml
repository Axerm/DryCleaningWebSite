                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.DefectsBefore"></label><br />
                <input asp-for="OrderViewModelData.DefectsBefore" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.DefectsBefore" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.DefectsAfter"></label><br />
                <input asp-for="OrderViewModelData.DefectsAfter" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.DefectsAfter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.RemovableFittings"></label><br />
                <input asp-for="OrderViewModelData.RemovableFittings" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.RemovableFittings" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderViewModelData.NonRemovableFittings"></label><br />
                <input asp-for="OrderViewModelData.NonRemovableFittings" autocomplete="off" class="form-control">
                <span asp-validation-for="OrderViewModelData.NonRemovableFittings" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.OperationalWearDegreeId"></label><br />
                <select asp-for="OrderViewModelData.OperationalWearDegreeId" asp-items="@Model.OperationalWearDegreesData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.OperationalWearDegreeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.ServiceTypeId"></label><br />
                <select asp-for="OrderViewModelData.ServiceTypeId" asp-items="@Model.ServiceTypesData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.ServiceTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                *<label asp-for="OrderViewModelData.StockId"></label><br />
                <select asp-for="OrderViewModelData.StockId" asp-items="@Model.StocksData" autocomplete="off">
                    <option>Выберите...</option>
                </select>
                <span asp-validation-for="OrderViewModelData.StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.AdditionalCost"></label><br />
                <input asp-for="OrderViewModelData.AdditionalCost" class="form-control" autocomplete="off">
                <span asp-validation-for="OrderViewModelData.AdditionalCost" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Далее" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-secondary like-submit">Отменить регистрацию</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

