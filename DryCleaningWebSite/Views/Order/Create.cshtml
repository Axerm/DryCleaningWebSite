                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.HasAbrasion">
                    <input asp-for="OrderViewModelData.HasAbrasion" />
                    @Html.DisplayNameFor(m => m.OrderViewModelData.HasAbrasion)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderViewModelData.HasDeformation">
                    <input asp-for="OrderViewModelData.HasDeformation" />
